{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2018",
    "lib": ["es2018", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "checkJs": false,
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "paths": {
      "graphql-helix": ["./../../packages/core/lib/index.ts"],
      "graphql-helix/to-response-payload": ["./../../packages/core/lib/to-response-payload.ts"],
      "graphql-helix/node/to-readable": ["./../../packages/core/lib/node/to-readable.ts"]
    }
  }
}
