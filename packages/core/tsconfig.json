{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2018",
    "lib": ["es2018", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "checkJs": false,
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "exclude": ["deno_dist", "dist", "examples", "node_modules", "packages/graphql-helix/test", "**/*.spec.ts"],
  "include": ["lib", "declarations.d.ts"]
}
